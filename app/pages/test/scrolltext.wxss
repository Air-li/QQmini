.row {
  display: flex;
  padding: 10rpx 0;
}

.row .item {
  margin-right: 120rpx;
  display: inline-block;
}

.row1 {
  padding: 0 700rpx;
  margin-left: 50rpx;

  animation: move 20s infinite linear;
}

@keyframes move {
  0% {
    transform: translateX(0rpx);
  }

  100% {
    transform: translateX(-2000rpx);
  }
}

.row3 {
  margin-left: 25rpx;
}