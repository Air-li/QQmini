/* css引入 */
@import "css/colorui/animation.wxss";
@import "css/colorui/icon.wxss";
@import "css/colorui/main.wxss";

@import "css/common.wxss";
@import "css/animation.wxss";

page {
  height: 100%;
  font-size: 30rpx;
  line-height: 1.4;
  font-family: -apple-system-font, "PingFang SC", "Helvetica Neue", Helvetica, STHeiti, Tahoma, Simsun, sans-serif;
  text-align: center;
}

@media (min-width:480px) {
  page {
    font-size: 20px;
  }
}

view,
scroll-view,
swiper,
button,
input,
textarea,
label,
navigator,
image {
  box-sizing: border-box;
}

/* V2按钮样式修正  */
.button {
  min-height: auto !important;
  width: auto !important;
  font-weight: 400 !important;
  font-size: 16px;
}