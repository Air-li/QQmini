.leftIcon {
  display: inline-block;
}

.placeholder {
  margin-top: -5rpx;
  margin-left: 5%;
  margin-bottom: 5%;
  height:30px
}

.placeholder .box text {
  color: grey;
  font-size: 24rpx;
}

.placeholder .box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60%;
  border: 2rpx solid grey;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
}

.inputbox {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60%;
  border: 2rpx solid grey;
  border-radius: 10rpx;
  padding: 2rpx 40rpx 0  2rpx;
}

#searchImg {
  width: 40rpx;
  height: 40rpx;
}

.list {
  width: 720rpx;
  padding: 0 15rpx;
  display: flex;
  position: relative;
  /* background-image: linear-gradient(to right, #ffecd2 0%, #fcb69f 100%); */
}

.imgCtn {
  width: 300rpx;
}

.imgCtn image {
  width: calc(300rpx - 10px);
  height: calc(300rpx - 20px);
  border-radius: 8px;
  margin: 6px;
}

.detail {
  width: 406rpx;
  padding-left: 14rpx;
}

.title {
  display: flex;
}

.name {
  font-size: 20px;
  font-weight: bold;
  margin-top: 12px;
}

.position {
 margin-top: 18px;
 color:rgb(11, 168, 255)
}

.tagCtn {
  width: 100%;
  margin: 4rpx 0;
}

.tag {
  display: inline;
  padding: 2px 6px;
  background-color: #efeef4;
  border-radius: 10px;
  color: #888;
  margin: 0 4px;
}

.score {
  margin: 8px 0 4px 0;
}

.scoreIcon {
  width: 40rpx;
  height: 40rpx;
}
/* iconbar */
.iconbar{
display: flex;
align-items: flex-end
}
/*  */
.time {
  margin: 4px 0;
}

.timeIcon {
  width: 18px;
  height: 18px;
}

.price {
  position: absolute;
  right: 20px;
  bottom: 16px;
  color: red;
  font-size: 20px;
}

.money {
  font-weight: bold;
}
